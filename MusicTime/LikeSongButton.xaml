<UserControl x:Class="MusicTime.LikeSongButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MusicTime"
             mc:Ignorable="d" 
               d:DesignHeight="23" Width="auto" Height="23">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="23" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Name="StatusBar" Grid.ColumnSpan="2" HorizontalAlignment="Right"
                Height="23" Click="LikeSong" Width="23"
                Background="Transparent" BorderBrush="Transparent" BorderThickness="0"
                Visibility="Visible" >
            <Image ToolTip="Like/Unlike" x:Name="LikeIcon" Source="Resources\Heart_Red.png" Height="16" Width="16"
                   Visibility="Visible"></Image>
        </Button>
        
    </Grid>
</UserControl>
